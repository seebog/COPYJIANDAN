<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lession11_.MainActivity">

    <Button     android:id="@+id/bindBtn"
        android:text="绑定服务"
        android:onClick="clickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button     android:id="@+id/accesBtn"
        android:text="访问服务"
        android:onClick="clickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/unbindBtn"
        android:text="解放服务"
        android:onClick="clickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Button android:id="@+id/opemBBtn"
        android:text="打开第二个窗口"
        android:onClick="clickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
    android:background="#f00"

        />

    <Button android:id="@+id/msgBindBtn"
        android:text="使用消息绑定服务"
        android:onClick="clickBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/sayHelloBtn"

        android:text="访问服务"
        android:onClick="clickBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/msgunBindBtn"
        android:text="使用消息绑定服务"
        android:onClick="clickBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
